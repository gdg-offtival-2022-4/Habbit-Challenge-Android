<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/item_room"
    android:background="@drawable/shape_round_rectangle"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/room_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/room_image"
        android:background="@color/black">
    </View>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:padding="8dp">

        <TextView
            android:id="@+id/room_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/marin_primary"
            android:text="room title">
        </TextView>

        <ImageView
            android:id="@+id/user_one"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/room_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp">
        </ImageView>

        <ImageView
            android:id="@+id/user_two"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/user_one"
            app:layout_constraintLeft_toRightOf="@id/user_one"
            android:layout_marginLeft="-8dp">
        </ImageView>

        <ImageView
            android:id="@+id/user_three"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/user_one"
            app:layout_constraintLeft_toRightOf="@id/user_two"
            android:layout_marginLeft="-8dp">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>